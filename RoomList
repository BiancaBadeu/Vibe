import java.util.ArrayList;

public class RoomList
{
   private static ArrayList<Room> roomList;

   public RoomList()
   {
      this.roomList = new ArrayList<>();
   }

   public void addRoom(Room room)
   {
      roomList.add(room);
   }

   public static Room getRoomByID(String id)
   {
      for(int i=0;i<roomList.size();i++)
      {
         if(id.equals(roomList.get(i).getId()))
            return roomList.get(i);
      }
      return null;
   }
   public ArrayList<Room> getRoomsBySize(int capacity)
   {
      ArrayList<Room> roomsBySize = new ArrayList<>();
      for(int i=0;i<roomList.size();i++)
      {
         if(capacity == roomList.get(i).getCapacity())
            roomsBySize.add(roomList.get(i));
      }
      return roomsBySize;
   }
   public ArrayList<Room> getRoomsBySizeBiggerThan(int capacity)
   {
      ArrayList<Room> roomsBySizeBiggerThan = new ArrayList<>();
      for(int i=0;i<roomList.size();i++)
      {
         if(capacity <= roomList.get(i).getCapacity())
            roomsBySizeBiggerThan.add(roomList.get(i));
      }
      return roomsBySizeBiggerThan;
   }
   public ArrayList<Room> getUnitableRooms()
   {
      ArrayList<Room> unitableRooms = new ArrayList<>();
      for(int i=0;i<roomList.size();i++)
      {
         if(roomList.get(i).getUnitedWith() != null)
            unitableRooms.add(roomList.get(i));
      }
      return unitableRooms;
   }

   public Room getRoomUnitedWith(Room room)
   {
      ArrayList<Room> unitableRooms = getUnitableRooms();

      for(int i=0;i<unitableRooms.size();i++)
      {
         if(roomList.get(i).getId().equals(room.getUnitedWith()))
            return roomList.get(i);
      }
      return null;
   }
   public static ArrayList<Room> getAllUnbookedRooms()
   {
      ArrayList<Room> unbookedRooms = new ArrayList<>();
      for(int i=0;i<roomList.size();i++)
      {
         if(!roomList.get(i).getIsBooked())
            unbookedRooms.add(roomList.get(i));
      }
      return unbookedRooms;
   }
   public static ArrayList<Room> getAllBookedRooms()
   {
      ArrayList<Room> bookedRooms = new ArrayList<>();
      for(int i=0;i<roomList.size();i++)
      {
         if(roomList.get(i).getIsBooked())
            bookedRooms.add(roomList.get(i));
      }
      return bookedRooms;
   }

   public String toString()
   {
      return "Room list: " + roomList;
   }
}
