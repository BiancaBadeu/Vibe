      </Label>
      <HBox alignment="CENTER" prefHeight="88.0" prefWidth="600.0" spacing="100">
         <children>
            <Button fx:id="addStudentButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="130.0" text="Add student" onAction="#addStudentButtonPressed">
