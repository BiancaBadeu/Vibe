import java.util.ArrayList;

public class StudentList
{
  private ArrayList<Student> studentList;

  public StudentList()
  {
    this.studentList = new ArrayList<>();
  }

  public void addStudent(Student student)
  {
    studentList.add(student);
  }

  public void removeStudentByID(int id)
  {
    for(int i=0;i<studentList.size();i++)
    {
      if(id == studentList.get(i).getStudentID())
        studentList.remove(studentList.get(i));
    }
  }

  public ArrayList<Student> getStudentsByClassID(String classID)
  {
    ArrayList<Student> studentsByClass = new ArrayList<>();
    for(int i=0;i<studentList.size();i++)
    {
      if(classID.equals(studentList.get(i).getClassID()))
        studentsByClass.add(studentList.get(i));
    }
    return studentsByClass;
  }
  public ArrayList<Student> getStudentsByName(String name)
  {
    ArrayList<Student> studentsByName = new ArrayList<>();
    for(int i=0;i<studentList.size();i++)
    {
      if(name.equals(studentList.get(i).getName()))
        studentsByName.add(studentList.get(i));
    }
    return studentsByName;
  }

  public String toString()
  {
    return "List: " + studentList;
  }
}
